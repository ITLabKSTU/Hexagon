<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/fon">
    <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/ava"
            android:layout_alignParentLeft="true" android:layout_marginLeft="185dp" android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Play"
            android:id="@+id/startgame"
            android:background="@drawable/fon" android:textColor="#ffffff"
            android:textSize="30dp" android:textStyle="bold|italic" android:typeface="serif"
            android:visibility="visible" android:layout_alignLeft="@+id/imageView"
            android:layout_below="@+id/imageView" android:layout_alignRight="@+id/imageView"/>
    <Button android:layout_width="match_parent" android:layout_height="50dp" android:text="Settings"
            android:id="@+id/settings"
            android:background="@drawable/fon" android:textColor="#ffffff"
            android:textSize="30dp" android:textStyle="bold|italic" android:typeface="serif"
            android:visibility="visible" android:layout_alignLeft="@+id/imageView" android:layout_alignParentTop="true"
            android:layout_marginTop="175dp" android:layout_alignRight="@+id/imageView"/>
    <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="About Us"
            android:id="@+id/button3" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:textStyle="bold|italic" android:typeface="serif" android:enabled="false"
            android:background="@drawable/fon" android:textColor="#ffffff"/>
</RelativeLayout>